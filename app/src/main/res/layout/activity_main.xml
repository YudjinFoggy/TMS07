<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/this_is_my_homework"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/hw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_1" />

        <Button
            android:id="@+id/hw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_2" />

        <Button
            android:id="@+id/hw3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_3" />

        <Button
            android:id="@+id/hw4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_4" />

        <Button
            android:id="@+id/hw5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_5" />

        <Button
            android:id="@+id/hw6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="@string/homework_6" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>